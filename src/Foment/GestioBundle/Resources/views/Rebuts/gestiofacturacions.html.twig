{# src/Foment/GestioBundle/Resources/views/Page/gestiofacturacions.html.twig #}
{% extends 'FomentGestioBundle::layout.html.twig' %}

{% block title %}Gestió dels períodes de facturació{% endblock %}

{% block stylesheets %}
	<!-- Select2 styles -->
	<link href="{{ asset('css/select2.css') }}" type="text/css" rel="stylesheet" />
	
	{{ parent() }}
{% endblock %}

{% block breadcrumb %}
<li><a href="{{ path('foment_gestio_homepage') }}"><span class="fa fa-home fa-1x"></span> Inici</a></li><li><span class="current">Gestió facturacions</span></li>
{% endblock %}

{% block containerclass %}gestiofacturacions-page{% endblock %}

{% block pagetitle %}Gestió facturacions <span class="right-text form-block-label">Escollir data límit</span>{% endblock %}

{% block topbuttons %}{% endblock %}


{% block main %}
	<div class="page-block row">
		<div id="block-form-facturacions" class="form-subblock col-md-12">
			{{ form_start(form, {'action': path('foment_gestio_facturacionscontent')}) }}
			<div class="right-text">
				<div class="input-group"><span class="input-group-addon">Fins</span>
	   				{{ form_widget(form.datafins, {'attr': {'placeholder': '', 'class': 'form-control form-control-center datafins' } })  }}
	   				<span class="input-group-addon input-group-addon-icon open-calendar"><span class="fa fa-calendar fa-1x"></span></span>
	   			</div>
			{{ form_end(form) }}
			</div>
		</div>
		<div class="clearfix"></div>
		<div id="info-facturacions" class="form-subblock col-md-12">
			{# include 'FomentGestioBundle:Rebuts:gestiofacturacionscontent.html.twig' #}
		</div>	
	</div>
{% endblock %}


{% block javascripts %}

	{{ parent() }}

	<!-- Select2 plugin's -->
	<script src="{{ asset('js/select2.min.js') }}" type="text/javascript"></script>
	<script src="{{ asset('js/select2_locale_ca.js') }}" type="text/javascript"></script>
	
	<script type="text/javascript">


	queryFacturacions = function(url) {
		
    	obrirMascaraBlock('#info-facturacions');
    	
		$.get(url, function(data) {
			
			$('#info-facturacions').html(data);
				
		}).fail(function(xhr, status, error) {
			$('#info-facturacions').html("No s'ha pogut carregar el contingut"+xhr.responseText);
			
		});	
	}
	
	$(document).ready( function() {

		var mindate = new Date(dateNow.getFullYear()-5, 0 , 1 );
		var maxdate = new Date();
		maxdate.setDate(dateNow.getDate() + 365);
		
		initDateTimePicker ($( '#form_datafins' ), mindate,  maxdate, dateNow, 'datafins-picker', false);

		$( '#form_datafins' ).datetimepicker( {'allowBlank': false });
		
		
		var url = "{{ path('foment_gestio_facturacionscontent')  }}";
		url += '?action=query&datafins='+$( "#form_datafins" ).val();
		queryFacturacions(url);
		
		$( "#form_datafins" ).change(function() {
			if ($( "#form_datafins" ).val() == '') 
			
			$('.info-facturacions').html('');

			url += '?action=query&datafins='+$( "#form_datafins" ).val();
			queryFacturacions(url);
			
			//queryFacturacions(url);
		});

		// 'delegate event'. 
		$('#info-facturacions').on('click', 'a.esborrar-facturacio', function (event) {
			event.preventDefault();
			obrirMascaraBlock('#info-facturacions');
			var url = $(this).attr('href');
			
			var text = "<h2 class='block-title blue'><i>Vols confirmar l'anul·lació del període ?</i></h2>";
			text += "<p>S'esborraran <b>tots els rebuts</b> associats a aquest</p>";
			
			obrirDialegConfirmacio(text, "Confirmar anul·lació", 0, 400, 
				function() { // Ok
					
					queryFacturacions(url);
					
					//window.location = url;
				}, 
				function() { // Ko
					// Res a fer
					tancarMascaraBlock('#info-facturacions');
				}
			);
			
		});

		$('#info-facturacions').on('click', 'a.crear-facturacio', function (event) {
			event.preventDefault();
			obrirMascaraBlock('#info-facturacions');
			var url = $(this).attr('href')+'&datafins='+$( "#form_datafins" ).val();
			
			var text = "<h2 class='block-title blue'><i>Nova facturació fins "+$( "#form_datafins" ).val()+"</i></h2>";
			text += "<p>A continuació es crearan els rebuts pendents de les quotes anuals dels socis fins a la data indicada. Només per a les inscripcions dins d'aquest termini</p>";
			
			obrirDialegConfirmacio(text, "Confirmar", 0, 400, 
				function() { // Ok
					
					queryFacturacions(url);
					
					//window.location = url;
				}, 
				function() { // Ko
					// Res a fer
					tancarMascaraBlock('#info-facturacions');
				}
			);
			
		});

		$('#info-facturacions').on('click', 'a.facturar-rebuts', function (event) {
			event.preventDefault();
			var url = $(this).attr('href')+'&datafins='+$('form_datafins').val();
			obrirMascaraBlock('#info-facturacions');
			var text = "<h2 class='block-title blue'>Enviament al banc de les domiciliacions</h2>";
			text += "<p><i>Els rebuts pendents seran agrupats en una facturació nova</i></p>";

			obrirDialegConfirmacio(text, "Facturar", 0, 400, 
				function() { // Ok
					queryFacturacions(url);
					//window.location = url;
				}, 
				function() { // Ko
					// Res a fer
					tancarMascaraBlock('#info-facturacions');
				}
			);
			
		});
		
		
	});

	</script>
{% endblock %}