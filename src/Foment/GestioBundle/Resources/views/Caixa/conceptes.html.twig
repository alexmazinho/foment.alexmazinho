{# src/Foment/GestioBundle/Resources/views/apunts/conceptes.html.twig #}
{% form_theme form 'FomentGestioBundle:Includes:formtheming.html.twig' %}

<div id="block-form-concepte">
	{{ form_start(form, {'action': path('foment_gestio_conceptes')}) }}
	
	{% include 'FomentGestioBundle:Includes:messages.html.twig' %}
	
	<div class="form-block row">
		<div class="form-subblock col-md-12">
			<div class="row">{{ form_widget(form.id) }}
				<div class="form-field col-md-10">
				 	<div class="input-group"><span class="input-group-addon">concepte</span>
					{{ form_widget(form.concepte, {'attr': {'placeholder': 'indicar nou concepte', 'class': 'form-control form-control-left' } }) }}</div>
				</div>	
				<div class="form-field col-md-2 text-right">
		        	<a class="netejar-formulari btn btn-warning btn-small" href="javascript:void(0)" role="button" title="Netejar el formulari"><span class="fa fa-eraser fa-1x white"></span></a>
		        	<a class="desar-concepte btn btn-success btn-small" href="{{ path('foment_gestio_conceptedesar') }}" role="button" title="Desar el concepte"><span class="fa fa-save fa-1x white"></span></a>
		        </div>	
				<div class="form-field col-md-4">
		   			<div class="input-group"><span class="input-group-addon input-group-addon-icon">tipus</span>
		        		<div class="form-select form-select-inner">{{ form_widget(form.tipus, {'attr': {'placeholder': 'tipus ...', 'class': 'form-control form-control-center'} })  }}</div>
			    	</div>
				</div>
				
				<div class="form-field col-md-6">
				    <div class="input-group"><span class="input-group-addon">baixa</span>
	   					{{ form_widget(form.databaixa, {'attr': {'placeholder': '', 'class': 'form-control form-control-center databaixa' } })  }}
	   					<span class="input-group-addon input-group-addon-icon open-calendar"><span class="fa fa-calendar fa-1x"></span></span>
	   				</div>
		        </div>
		     </div>
		     <div class="row">
		        {{ form_widget(form.seccions) }}
		        <div class="form-field col-md-6">
				    <div class="input-group"><span class="input-group-addon input-group-addon-icon">afegir secció</span>
		        		<div class="form-select form-select-inner">{{ form_widget(form.cercaseccio, {'attr': {'placeholder': 'seccions ...', 'class': 'form-control form-control-left'} })  }}</div>
		        		<span class="input-group-addon input-group-addon-icon">
		        			<a class="associar-seccio btn btn-primary btn-xs" href="javascript:void(0)" role="button" title="Associar secció"><span class="fa fa-plus fa-1x white"></span></a>
		        		</span>
			    	</div>
		        </div>
		        <div class="form-field col-md-6">
					<h4 class="title-associacions">Seccions associades</h4>	        	
		        	<ul id="seccions-concepte"></ul>
		        </div>
		     </div>
		     <div class="row">
		        {{ form_widget(form.activitats) }}
		        <div class="form-field col-md-7">
				    <div class="input-group"><span class="input-group-addon input-group-addon-icon">afegir activitat</span>
		        		<div class="form-select form-select-inner">{{ form_widget(form.cercaactivitat, {'attr': {'placeholder': 'activitats ...', 'class': 'form-control form-control-left'} })  }}</div>
		        		<span class="input-group-addon input-group-addon-icon">
		        			<a class="associar-activitat btn btn-primary btn-xs" href="javascript:void(0)" role="button" title="Associar activitat o curs"><span class="fa fa-plus fa-1x white"></span></a>
		        		</span>
			    	</div>
		        </div>
		        <div class="form-field col-md-5">
					<h4 class="title-associacions">Cursos o activitats associats</h4>	        	
		        	<ul id="activitats-concepte"></ul>
		        </div>
			</div>
		</div>
	</div>
	<div class="form-hidden">
    	{{ form_end(form) }}
    </div>	
    <div id="taula-conceptes" class="taula-resultats full-width-container">
    	{% include 'FomentGestioBundle:Caixa:taulaconceptes.html.twig' %}
    </div>	
</div>