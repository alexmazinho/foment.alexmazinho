{% endblock %}

{% block containerclass %}home-page{% endblock %}

{% block pretitle %}
<div class="pre-title jumbotron">
<p>Benvingut/da a l'aplicació de Gestió de</p>
<h2>Foment Martinenc</h2></div>
{% endblock %}

{% block pagetitle %}Accessos directes{% endblock %}

{% block topbuttons %} {% endblock %}
{% block main %}

<div class="row">
	<div class="col-md-4">
		<ul class="nav home-links">
		   	<li><a href="{{ path('foment_gestio_cercapersones') }}">Cercar persona <span class="fa fa-angle-double-right fa-1x"></span></a></li>
			<li><a href="{{ path('foment_gestio_nousoci') }}">Nou/va soci/a <span class="fa fa-angle-double-right fa-1x"></span></a></li>
			<li><a href="{{ path('foment_gestio_novapersona') }}">Noves dades no soci/a <span class="fa fa-angle-double-right fa-1x"></span></a></li>
		    <li><a href="{{ path('foment_gestio_morosos') }}">Consulta morosos <span class="fa fa-angle-double-right fa-1x"></span></a></li>
		</ul>
	</div>
	<div class="col-md-4">
		<ul class="nav home-links">
		   	<li><a href="{{ path('foment_gestio_rebuts') }}">Cercar rebuts <span class="fa fa-angle-double-right fa-1x"></span></a></li>
		   	<li><a href="{{ path('foment_gestio_facturacions') }}">Gestionar facturacions <span class="fa fa-angle-double-right fa-1x"></span></a></li>
			<li><a href="{{ path('foment_gestio_rebuts') }}">Imprimir rebuts <span class="fa fa-angle-double-right fa-1x"></span></a></li>
		    <li><a href="{{ path('foment_gestio_cercapersones') }}">Imprimir etiquetes <span class="fa fa-angle-double-right fa-1x"></span></a></li>
		</ul>
	</div>
	<div class="col-md-4">
		<ul class="nav home-links">
		   	<li><a href="{{ path('foment_gestio_seccions') }}">Seccions <span class="fa fa-angle-double-right fa-1x"></span></a></li>
		   	<li><a href="{{ path('foment_gestio_activitats') }}">Cursos i tallers <span class="fa fa-angle-double-right fa-1x"></span></a></li>
		   	<li><a href="{{ path('foment_gestio_comunicacions') }}">Generar fitxer domiciliacions <span class="fa fa-angle-double-right fa-1x"></span></a></li>
		   	<li><a href="{{ path('foment_gestio_comunicacions') }}">Generar fitxer hisenda <span class="fa fa-angle-double-right fa-1x"></span></a></li>
		</ul>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<h2 class="llista-incidencies block-title">Incidències</h2>
		{% if incidencies|length > 0 %}
			<div class="alert alert-danger">
    			<ul class="home-incidencies">
    			{% for incidencia in incidencies %}
    				<li><a href="{{ path('foment_gestio_veuredadespersonals', {'id': incidencia.soci, 'soci': 1  }) }}">
    							{{ incidencia.nom }}</a>, {{ incidencia.incidencia }}</li>
    			{% endfor %} 
    			</ul>
			</div>
		{% else %}
			<div class="alert alert-success">No hi ha cap incidència</div>
		{% endif %}	
	</div>
</div>


{% endblock %}

{% block javascripts %}
	{{ parent() }}
	
	<script type="text/javascript">
	$(document).ready(function(){
		// Open sidebar on home page
		$('a.hide-sidebar').click(); 
		
	});
	</script>
{% endblock %}